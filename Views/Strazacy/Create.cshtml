@model myRemiza.Models.Strazacy

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj nowego strażaka</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Imie" class="control-label">Imie</label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label">Nazwisko</label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_urodzenia" class="control-label">Data urodzenia</label>
                <input asp-for="Data_urodzenia" class="form-control" />
                <span asp-validation-for="Data_urodzenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_wstapienia" class="control-label">Data wstąpienia do jednostki</label>
                <input asp-for="Data_wstapienia" class="form-control" />
                <span asp-validation-for="Data_wstapienia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kursy" class="control-label">Zdane kursy</label>
                <input asp-for="Kursy" class="form-control" />
                <span asp-validation-for="Kursy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Odznaczenia" class="control-label">Odznaczenia</label>
                <input asp-for="Odznaczenia" class="form-control" />
                <span asp-validation-for="Odznaczenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
