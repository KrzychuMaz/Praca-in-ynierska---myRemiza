@model myRemiza.Models.Wyjazdy

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj nowy wyjazd</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label">Data</label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Miejsce" class="control-label">Miejsce</label>
                <input asp-for="Miejsce" class="form-control" />
                <span asp-validation-for="Miejsce" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rodzaj_zdarzeniaId" class="control-label">Rodzaj zdarzenia</label>
                <select asp-for="Rodzaj_zdarzeniaId" class ="form-control" asp-items="@(new SelectList(ViewBag.Rodzaj_zdarzenia, "Key", "Value"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Strazacy" class="control-label">Strażacy uczestniczący w akcji</label>
                <textarea asp-for="Strazacy" class="form-control"></textarea>
                <span  asp-validation-for="Strazacy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SamochodyId" class="control-label">Wóz bojowy #1</label>
                <select asp-for="SamochodyId" class ="form-control" asp-items="@(new SelectList(ViewBag.Samochody, "Key", "Value"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="SamochodyId2" class="control-label">Wóz bojowy #2</label>
                <select asp-for="SamochodyId2" class="form-control" asp-items="@(new SelectList(ViewBag.Samochody, "Key", "Value"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label">Opis zdarzenia</label>
                <textarea asp-for="Opis" class="form-control"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
